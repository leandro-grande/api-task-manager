generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(uuid()) @map("_id") @db.ObjectId
  name       String
  password   String
  email      String  @unique
  avatar_url String?

  task Task[]

  @@map("users")
}

model Task {
  id         String   @id @default(uuid()) @map("_id") @db.ObjectId
  title      String
  created_at DateTime @default(now())
  userId     String?  @db.ObjectId

  user User? @relation(fields: [userId], references: [id])

  @@map("tasks")
}
